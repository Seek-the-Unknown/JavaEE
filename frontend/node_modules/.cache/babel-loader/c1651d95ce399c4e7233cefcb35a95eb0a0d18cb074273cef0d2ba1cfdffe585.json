ync () => {\n      isLoading.value = true;\n      errorMessage.value = \"\";\n      successMessage.value = \"\";\n      if (mode.value === \"login\") {\n        try {\n          const userData = await apiLogin({\n            username: form.username,\n            password: form.password\n          });\n          storeLogin(userData);\n          router.push(\"/venues\");\n        } catch (error) {\n          errorMessage.value = error.message || \"登录失败，请检查您的凭据。\";\n        }\n      } else if (mode.value === \"register\") {\n        if (form.password !== form.confirmPassword) {\n          errorMessage.value = \"两次输入的密码不一致！\";\n          isLoading.value = false;\n          return;\n        }\n        try {\n          await apiRegister({\n            username: form.username,\n            password: form.password\n          });\n          successMessage.value = \"注册成功！现在您可以登录了。\";\n          setTimeout(() => switchMode(\"login\"), 2000); // 2秒后自动切换到登录\n        } catch (error) {\n          errorMessage.value = error.message || \"注册失败，请稍后再试。\";\n        }\n      }\n      isLoading.value = false;\n    };\n    const __returned__ = {\n      mode,\n      isLoading,\n      errorMessage,\n      successMessage,\n      router,\n      storeLogin,\n      form,\n      title,\n      subtitle,\n      switchMode,\n      handleForgotPassword,\n      handleSubmit,\n      ref,\n      reactive,\n      computed,\n      get useRouter() {\n        return useRouter;\n      },\n      get apiLogin() {\n        return apiLogin;\n      },\n      get apiRegister() {\n        return apiRegister;\n      },\n      get useUserStore() {\n        return useUserStore;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","reactive","computed","useRouter","login","apiLogin","register","apiRegister","useUserStore","mode","isLoading","errorMessage","successMessage","router","storeLogin","form","username","password","confirmPassword","email","title","value","subtitle","switchMode","newMode","Object","assign","handleForgotPassword","setTimeout","handleSubmit","userData","push","error","message"],"sources":["F:/Java_web_code/frontend/src/views/LoginRegisterView.vue"],"sourcesContent":["<template>\n  <div class=\"auth-container\">\n    <div class=\"auth-card\">\n      <div class=\"card-header\">\n        <h1 class=\"auth-title\">{{ title }}</h1>\n        <p class=\"auth-subtitle\">{{ subtitle }}</p>\n      </div>\n\n      <div class=\"card-body\">\n        <!-- 登录表单 -->\n        <form v-if=\"mode === 'login'\" @submit.prevent=\"handleSubmit\">\n          <div class=\"form-group\">\n            <input\n              type=\"text\"\n              v-model=\"form.username\"\n              required\n              placeholder=\"用户名\"\n            />\n          </div>\n          <div class=\"form-group\">\n            <input\n              type=\"password\"\n              v-model=\"form.password\"\n              required\n              placeholder=\"密码\"\n            />\n          </div>\n          <div class=\"form-footer\">\n            <a\n              href=\"#\"\n              class=\"forgot-password\"\n              @click.prevent=\"switchMode('forgot')\"\n              >忘记密码?</a\n            >\n          </div>\n          <p v-if=\"errorMessage\" class=\"error-message\">{{ errorMessage }}</p>\n          <button type=\"submit\" class=\"submit-button\" :disabled=\"isLoading\">\n            {{ isLoading ? \"登录中...\" : \"登 录\" }}\n          </button>\n          <p class=\"switch-mode-text\">\n            没有账户?\n            <a href=\"#\" @click.prevent=\"switchMode('register')\">立即注册</a>\n          </p>\n        </form>\n\n        <!-- 注册表单 -->\n        <form v-if=\"mode === 'register'\" @submit.prevent=\"handleSubmit\">\n          <div class=\"form-group\">\n            <input\n              type=\"text\"\n              v-model=\"form.username\"\n              required\n              placeholder=\"设置用户名\"\n            />\n          </div>\n          <div class=\"form-group\">\n            <input\n              type=\"password\"\n              v-model=\"form.password\"\n              required\n              placeholder=\"设置密码\"\n            />\n          </div>\n          <div class=\"form-group\">\n            <input\n              type=\"password\"\n              v-model=\"form.confirmPassword\"\n              required\n              placeholder=\"确认密码\"\n            />\n          </div>\n          <p v-if=\"errorMessage\" class=\"error-message\">{{ errorMessage }}</p>\n          <button type=\"submit\" class=\"submit-button\" :disabled=\"isLoading\">\n            {{ isLoading ? \"注册中...\" : \"创建账户\" }}\n          </button>\n          <p class=\"switch-mode-text\">\n            已有账户?\n            <a href=\"#\" @click.prevent=\"switchMode('login')\">返回登录</a>\n          </p>\n        </form>\n\n        <!-- 忘记密码表单 -->\n        <form v-if=\"mode === 'forgot'\" @submit.prevent=\"handleForgotPassword\">\n          <div class=\"form-group\">\n            <input\n              type=\"email\"\n              v-model=\"form.email\"\n              required\n              placeholder=\"请输入注册邮箱\"\n            />\n          </div>\n          <p v-if=\"errorMessage\" class=\"error-message\">{{ errorMessage }}</p>\n          <p v-if=\"successMessage\" class=\"success-message\">\n            {{ successMessage }}\n          </p>\n          <button type=\"submit\" class=\"submit-button\" :disabled=\"isLoading\">\n            {{ isLoading ? \"发送中...\" : \"发送重置链接\" }}\n          </button>\n          <p class=\"switch-mode-text\">\n            记起密码了?\n            <a href=\"#\" @click.prevent=\"switchMode('login')\">返回登录</a>\n          </p>\n        </form>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script setup>\nimport { ref, reactive, computed } from \"vue\";\nimport { useRouter } from \"vue-router\";\nimport { login as apiLogin, register as apiRegister } from \"@/api/user\";\nimport { useUserStore } from \"@/store/user\";\n\nconst mode = ref(\"login\"); // 'login', 'register', 'forgot'\nconst isLoading = ref(false);\nconst errorMessage = ref(\"\");\nconst successMessage = ref(\"\");\nconst router = useRouter();\nconst { login: storeLogin } = useUserStore();\n\nconst form = reactive({\n  username: \"\",\n  password: \"\",\n  confirmPassword: \"\",\n  email: \"\",\n});\n\n// 动态计算标题和副标题\nconst title = computed(() => {\n  if (mode.value === \"login\") return \"欢迎回来\";\n  if (mode.value === \"register\") return \"创建新账户\";\n  return \"重置您的密码\";\n});\nconst subtitle = computed(() => {\n  if (mode.value === \"login\") return \"登录以继续您的预约之旅\";\n  if (mode.value === \"register\") return \"只需几步，即可开启探索\";\n  return \"我们将向您的邮箱发送重置链接\";\n});\n\n// 切换模式\nconst switchMode = (newMode) => {\n  mode.value = newMode;\n  errorMessage.value = \"\";\n  successMessage.value = \"\";\n  Object.assign(form, {\n    username: \"\",\n    password: \"\",\n    confirmPassword: \"\",\n    email: \"\",\n  });\n};\n\n// 忘记密码处理（模拟）\nconst handleForgotPassword = () => {\n  if (!form.email) {\n    errorMessage.value = \"请输入您的邮箱地址。\";\n    return;\n  }\n  isLoading.value = true;\n  errorMessage.value = \"\";\n  successMessage.value = \"\";\n\n  // 模拟API调用\n  setTimeout(() => {\n    successMessage.value = `一封重置密码的邮件已发送至 ${form.email}，请查收。`;\n    isLoading.value = false;\n  }, 1500);\n};\n\n// 登录/注册处理\nconst handleSubmit = async () => {\n  isLoading.value = true;\n  errorMessage.value = \"\";\n  successMessage.value = \"\";\n\n  if (mode.value === \"login\") {\n    try {\n      const userData = await apiLogin({\n        username: form.username,\n        password: form.password,\n      });\n      storeLogin(userData);\n      router.push(\"/venues\");\n    } catch (error) {\n      errorMessage.value = error.message || \"登录失败，请检查您的凭据。\";\n    }\n  } else if (mode.value === \"register\") {\n    if (form.password !== form.confirmPassword) {\n      errorMessage.value = \"两次输入的密码不一致！\";\n      isLoading.value = false;\n      return;\n    }\n    try {\n      await apiRegister({ username: form.username, password: form.password });\n      successMessage.value = \"注册成功！现在您可以登录了。\";\n      setTimeout(() => switchMode(\"login\"), 2000); // 2秒后自动切换到登录\n    } catch (error) {\n      errorMessage.value = error.message || \"注册失败，请稍后再试。\";\n    }\n  }\n  isLoading.value = false;\n};\n</script>\n\n<style scoped>\n.auth-container {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  padding: 40px 20px;\n}\n\n.auth-card {\n  width: 100%;\n  max-width: 420px;\n  background-color: var(--card-bg-color);\n  border-radius: var(--border-radius);\n  box-shadow: var(--shadow-lg);\n  overflow: hidden;\n}\n\n.card-header {\n  padding: 30px 40px;\n  background: var(--gradient-bg);\n  color: white;\n}\n\n.auth-title {\n  margin: 0;\n  font-size: 2.2em;\n  font-weight: 700;\n}\n\n.auth-subtitle {\n  margin: 5px 0 0;\n  opacity: 0.9;\n}\n\n.card-body {\n  padding: 40px;\n}\n\n.form-group {\n  margin-bottom: 20px;\n}\n\n.form-group input {\n  width: 100%;\n  padding: 14px 16px;\n  border: 1px solid var(--border-color);\n  border-radius: 8px;\n  font-size: 1em;\n  box-sizing: border-box;\n  transition: border-color 0.3s, box-shadow 0.3s;\n}\n\n.form-group input:focus {\n  outline: none;\n  border-color: var(--primary-color);\n  box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.2);\n}\n\n.form-footer {\n  text-align: right;\n  margin-bottom: 20px;\n}\n\n.forgot-password {\n  color: var(--primary-color);\n  text-decoration: none;\n  font-size: 0.9em;\n}\n\n.error-message,\n.success-message {\n  margin-bottom: 15px;\n  text-align: center;\n  padding: 10px;\n  border-radius: 6px;\n}\n.error-message {\n  color: #d8000c;\n  background-color: #ffbaba;\n}\n.success-message {\n  color: #270;\n  background-color: #dff2bf;\n}\n\n.submit-button {\n  width: 100%;\n  padding: 14px;\n  background: var(--gradient-bg);\n  color: white;\n  border: none;\n  border-radius: 8px;\n  font-size: 1.1em;\n  font-weight: bold;\n  cursor: pointer;\n  transition: opacity 0.3s, transform 0.2s;\n}\n\n.submit-button:hover:not(:disabled) {\n  opacity: 0.9;\n  transform: translateY(-2px);\n}\n\n.submit-button:disabled {\n  opacity: 0.6;\n  cursor: not-allowed;\n}\n\n.switch-mode-text {\n  margin-top: 25px;\n  text-align: center;\n  color: var(--text-color-light);\n}\n\n.switch-mode-text a {\n  color: var(--primary-color);\n  text-decoration: none;\n  font-weight: bold;\n}\n</style>\n"],"mappings":";AA6GA,SAASA,GAAG,EAAEC,QAAQ,EAAEC,QAAQ,QAAQ,KAAK;AAC7C,SAASC,SAAS,QAAQ,YAAY;AACtC,SAASC,KAAK,IAAIC,QAAQ,EAAEC,QAAQ,IAAIC,WAAW,QAAQ,YAAY;AACvE,SAASC,YAAY,QAAQ,cAAc;;;;;;;IAE3C,MAAMC,IAAI,GAAGT,GAAG,CAAC,OAAO,CAAC,CAAC,CAAC;IAC3B,MAAMU,SAAS,GAAGV,GAAG,CAAC,KAAK,CAAC;IAC5B,MAAMW,YAAY,GAAGX,GAAG,CAAC,EAAE,CAAC;IAC5B,MAAMY,cAAc,GAAGZ,GAAG,CAAC,EAAE,CAAC;IAC9B,MAAMa,MAAM,GAAGV,SAAS,CAAC,CAAC;IAC1B,MAAM;MAAEC,KAAK,EAAEU;IAAW,CAAC,GAAGN,YAAY,CAAC,CAAC;IAE5C,MAAMO,IAAI,GAAGd,QAAQ,CAAC;MACpBe,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE,EAAE;MACZC,eAAe,EAAE,EAAE;MACnBC,KAAK,EAAE;IACT,CAAC,CAAC;;IAEF;IACA,MAAMC,KAAK,GAAGlB,QAAQ,CAAC,MAAM;MAC3B,IAAIO,IAAI,CAACY,KAAK,KAAK,OAAO,EAAE,OAAO,MAAM;MACzC,IAAIZ,IAAI,CAACY,KAAK,KAAK,UAAU,EAAE,OAAO,OAAO;MAC7C,OAAO,QAAQ;IACjB,CAAC,CAAC;IACF,MAAMC,QAAQ,GAAGpB,QAAQ,CAAC,MAAM;MAC9B,IAAIO,IAAI,CAACY,KAAK,KAAK,OAAO,EAAE,OAAO,aAAa;MAChD,IAAIZ,IAAI,CAACY,KAAK,KAAK,UAAU,EAAE,OAAO,aAAa;MACnD,OAAO,gBAAgB;IACzB,CAAC,CAAC;;IAEF;IACA,MAAME,UAAU,GAAIC,OAAO,IAAK;MAC9Bf,IAAI,CAACY,KAAK,GAAGG,OAAO;MACpBb,YAAY,CAACU,KAAK,GAAG,EAAE;MACvBT,cAAc,CAACS,KAAK,GAAG,EAAE;MACzBI,MAAM,CAACC,MAAM,CAACX,IAAI,EAAE;QAClBC,QAAQ,EAAE,EAAE;QACZC,QAAQ,EAAE,EAAE;QACZC,eAAe,EAAE,EAAE;QACnBC,KAAK,EAAE;MACT,CAAC,CAAC;IACJ,CAAC;;IAED;IACA,MAAMQ,oBAAoB,GAAGA,CAAA,KAAM;MACjC,IAAI,CAACZ,IAAI,CAACI,KAAK,EAAE;QACfR,YAAY,CAACU,KAAK,GAAG,YAAY;QACjC;MACF;MACAX,SAAS,CAACW,KAAK,GAAG,IAAI;MACtBV,YAAY,CAACU,KAAK,GAAG,EAAE;MACvBT